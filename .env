# Development Environment Variables
VITE_API_URL=https://sharedwealth.net/api

# PostgreSQL Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=shared_wealth_international
DB_PASSWORD=
DB_PORT=5432

# JWT Configuration
JWT_SECRET=dev-secret-key-for-development-only-change-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=wealth-pioneers-session-secret-2024

# CSRF Configuration
CSRF_SECRET=wealth-pioneers-csrf-secret-2024

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# HTTPS Configuration
ENFORCE_HTTPS=false
REDIRECT_TO_HTTPS=false
TRUST_PROXY=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Monitoring Configuration
ENABLE_MONITORING=true
ALERT_EMAIL=admin@sharedwealth.com
ALERT_WEBHOOK_URL=
MONITORING_INTERVAL=30000

# Server Configuration
PORT=8080
NODE_ENV=development

# Security Configuration
ALLOWED_ORIGINS=https://sharedwealth.net,https://www.sharedwealth.net,http://localhost:8080,http://localhost:8081,http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_MAX_REQUESTS=500

# Request Limits
MAX_REQUEST_SIZE=10mb

# Database Connection Limits
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000
FRONTEND_URL=https://sharedwealth.net
VITE_FRONTEND_URL=https://sharedwealth.net
